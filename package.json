{
  "name": "meerkoningdanwilly.nl",
  "version": "1.0.0",
  "scripts": {
    "build": "next build",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "check-types": "tsc --noEmit --pretty",
    "clean": "rimraf .next node_modules coverage out yarn.lock",
    "compile:i18n": "formatjs compile-folder --ast --format simple ./src/locales ./src/locales/compiled",
    "dev": "next dev",
    "extract:i18n": "formatjs extract './src/**/*.{js,ts,jsx,tsx}' --format simple --id-interpolation-pattern '[sha512:contenthash:base64:6]' --out-file ./src/locales/en.json",
    "i18n": "npm-run-all extract:i18n compile:i18n",
    "lint": "next lint",
    "prepare": "husky install",
    "start": "next start",
    "test": "jest --watch"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.5",
    "@heroicons/react": "^1.0.6",
    "next": "^12.1.6",
    "next-seo": "^5.4.0",
    "node-cache": "^5.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^6.0.4",
    "spotify-web-api-node": "^5.0.2"
  },
  "devDependencies": {
    "@formatjs/cli": "^5.0.2",
    "@next/bundle-analyzer": "^12.1.6",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "autoprefixer": "^10.4.7",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.12",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.1.0",
